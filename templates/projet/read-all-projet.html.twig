<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<style>
    table{
        width:30%;
    }
    img{
        width: 100%;
    }
    body{
    background-color: rgb(234, 234, 234);
    margin: 0 auto;
    }

    .navbar{
        background-color: rgb(0, 149, 213);
        opacity: 0.8;
        width: 100%;
    }

    nav a{
        float: right;
        color: white;
        text-decoration: none;
        margin-right: 3em;
    }

    h1{
        color: white;
        margin: 0 auto;
    }

    table{
        margin: 0 auto;
        margin-top: 1em;
    }

    thead{
        font-weight: bold;
    }

    td{
        padding: 0.2em;
    }

    #bouton{
        margin-left: 53.4em;
        margin-top: 1em;
    }

    #AjoutProjet{
        color: white;
        text-decoration: none;
    }

    #fleche{
        float: right;
        margin-right: 3em;
        font-size: 24px;
        background-color: rgb(0, 149, 213);
        color: white;
        padding: 0.5em;
        border-radius: 50%;
    }

    footer{
        width: 100%;
        margin-top: 2em;
        padding: 1em;
        color: white;
        background-color:rgb(0, 149, 213);
    }
</style>
<header id="header">
    <nav class="navbar">
        <h1>Admin</h1>
        <a href="logout">Déconnexion</a>
    </nav>
</header>
<table class="table-secondary">
    <thead>
        <tr>
            <td>Nom</td>
            <td>Image</td>
        </tr>
    </thead>
    <tbody>
        {% for projet in lists %}
            <tr>
                <td>{{ projet.nom }}</td>
                <td><img src="{{ projet.image }}" alt="screenshot"></td>
                <td><button class="btn btn-light"><a href="read-projet/{{projet.id}}"><i class="far fa-eye" id="eye"></i></a></button></td>
                <td><button class="btn btn-light"><a href="edit-projet/{{projet.id}}"><i class="fas fa-pencil-alt" id="pencil"></i></a></button></td>
                <td><button class="btn btn-light"><a href="delete-projet/{{projet.id}}"><i class="fas fa-trash" id="trash"></i></button></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<button type="button" class="btn btn-primary" id="bouton"><a href="projet" id="AjoutProjet">Ajouter un projet</a></button>
<button type="button" class="btn btn-primary" id="bouton"><a href="read-all" id="AjoutProjet">Voir les messages</a></button>
<button type="button" class="btn btn-primary" id="bouton"><a href="read-all-competences" id="AjoutProjet">Voir les compétences</a></button>
<a href="#header"><i class="fas fa-arrow-up" id="fleche"></i></a>
<footer>
