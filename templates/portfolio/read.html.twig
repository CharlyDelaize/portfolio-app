{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/read.css') }}">
{% endblock %}

{% block body %}
<!-- NAV -->
    <header>
        <nav class="navbar">
            {% if app.user %}
                <div class="mb-3">
                    {{ app.user.username }} <!-- Affiche le mail de l'utilisateur connecté -->
                </div>
            {% else %}
                <meta http-equiv="refresh" content="durée=0.1s;URL=login"> <!-- Si l'utilisateur n'est pas connecté, redirection vers la page connection -->
            {% endif %}
            <h1>Admin</h1>
            <a href="../logout">Déconnexion</a>
        </nav>
    </header>
    <!-- AFFICHAGE DE LA CARD -->
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ contact.prenom }} {{ contact.nom }}</h5>
            <p>{{ contact.email }}</p>
            <p>{{ contact.message }}</p>
            <a href="/read-all" class="btn btn-primary">Retour</a>
        </div>
    </div>
    <footer>
        &copy; 2021, Charly Delaize
    </footer>
{% endblock %}