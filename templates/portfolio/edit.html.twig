{% extends 'base.html.twig' %}
{% block stylesheets %}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Portfolio</title>
        <!-- Liens Bootsrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('css/edit.css') }}">
    </head>
    {% endblock %}
    {% block body %}
    <body>
        <header>
            <nav class="navbar">
                {% if app.user %}
                    <div class="mb-3">
                        {{ app.user.username }} <!-- Affiche le mail de l'utilisateur connecté -->
                    </div>
                {% else %}
                    <meta http-equiv="refresh" content="durée=0.1s;URL=../login">
                {% endif %}
                <h1>Admin</h1>
                <a href="../logout">Déconnexion</a>
            </nav>
        </header>
        <div class="formulaire">
            {{ form_start(formulaire) }}
                {{ form_row(formulaire.nom) }}
                {{ form_row(formulaire.prenom) }}
                {{ form_row(formulaire.email) }}
                {{ form_row(formulaire.message) }} <!-- Affichage du formulaire avec les éléments de la base de données correspondant à l'ID-->
                <button type="submit" class="btn btn-primary" id="valider">Valider</button>
                <button  type="button" class="btn btn-primary"><a href="/read-all" id="retour">Retour</a></button>
            {{ form_end(formulaire) }}
        </div>
        <footer>
            &copy; 2021, Charly Delaize
        </footer>
    </body>
</html>
{% endblock %}