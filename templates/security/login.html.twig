{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <style>
        body{
            background-color: rgb(234, 234, 234);
            margin: 0 auto;
        }

        .navbar{
            background-color: rgb(0, 149, 213);
            opacity: 0.8;
            width: 100%;
        }

        nav a{
            float: right;
            color: white;
            text-decoration: none;
            margin-right: 3em;
        }

        h1{
            color: white;
            margin: 0 auto;
        }

        #error{
            width:  50%
        }

        form{
            margin-top: 2em;
            margin-left: 39.8em;
        }

        button{
            margin-top: 2em;
            margin-left: 12.5em;
        }

        footer{
            width: 100%;
            margin-top: 34.5em;
            padding: 1em;
            color: white;
            background-color:rgb(0, 149, 213);
        }

        #inputEmail, #inputPassword{
            width: 50%;
        }
    </style>
{% endblock %}
{% block body %}
<header>
    <nav class="navbar">
        <h1>Connexion</h1>
    </nav>
</header>
<form method="post">
    {% if error %}
        <div class="alert alert-danger" id="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h2 class="h3 mb-3 font-weight-normal">Veillez saisir votre addresse e-mail et votre mot de passe</h2>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
<footer>
    &copy; 2021, Charly Delaize
</footer>
{% endblock %}